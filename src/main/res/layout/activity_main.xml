<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bLabel"
        android:id="@+id/buttonCat"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"

        android:layout_marginBottom="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view1"
        android:src="@drawable/qmark2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/iLabel" />

    <Button
        android:id="@+id/buttonDog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view1"
        android:layout_alignRight="@+id/view1"
        android:layout_alignTop="@+id/buttonCat"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Dog" />

    <Button
        android:id="@+id/buttonBunny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bunny"
        android:layout_alignBaseline="@+id/buttonCat"
        android:layout_alignBottom="@+id/buttonCat"
        android:layout_toRightOf="@+id/buttonCat"
        android:layout_toEndOf="@+id/buttonCat"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

</RelativeLayout>
